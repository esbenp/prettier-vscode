{
  "env": {
      "es6": true,
      "node": true
  },
  "plugins": ["prettier"],
  "rules": {
      "prettier/prettier": [
          "error",
          {
              "singleQuote": true,
              "trailingComma": "es5",
              "semi": false
          }
      ],
      "indent": ["error", 4],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "never"]
  }
}
